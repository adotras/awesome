<c:FragmentDefinition xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table">
	<l:VerticalLayout>
		<l:content>
			<VBox>
				<ComboBox items="{/Categories}" id="Combobox0" selectionChange="onSelectionChange">
					<c:Item text="{Name}"/>
				</ComboBox>
				<Text text="Produktübersicht"/>
				<Table items="{path: '/Products', parameters: { expand: 'Category, Supplier' }}" id="table0" itemPress="onItemPress">
					<headerToolbar>
						<Toolbar>
							<ToolbarSpacer/>
							<Title level="H2" text="Sortieren"/>
							<Button press="onTableSettings" icon="sap-icon://drop-down-list" tooltip="Settings"/>
						</Toolbar>
					</headerToolbar>
					<items>
						<ColumnListItem type="Active" id="item2">
							<cells>
								<Text text="{Category/Name}" id="text1"/>
								<Text text="{Name}" id="text2"/>
								<Text text="{Price} €" id="text3"/>
								<Text text="{Supplier/Name}" id="text5"/>
								<RatingIndicator id="RI_M" maxValue="5" class="sapUiSmallMarginBottom" value="{Rating}" iconSize="22px" tooltip="Rating Tooltip" enabled="false"/>
							</cells>
						</ColumnListItem>
					</items>
					<columns>
						<Column id="__column4">
							<header>
								<Label text="Category" id="label4"/>
							</header>
						</Column>
						<Column id="__column0">
							<header>
								<Label text="Produkt" id="label0"/>
							</header>
						</Column>
						<Column id="__column1">
							<header>
								<Label text="Preis" id="label1"/>
							</header>
						</Column>
						<Column id="__column3">
							<header>
								<Label text="Lieferant" id="label3"/>
							</header>
						</Column>
						<Column id="__column5">
							<header>
								<Label text="Rating" id="label5"/>
							</header>
						</Column>
					</columns>
				</Table>
			</VBox>
		</l:content>
	</l:VerticalLayout>
</c:FragmentDefinition>