<c:FragmentDefinition xmlns:c="sap.ui.core" xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:t="sap.ui.table">
	<l:VerticalLayout>
		<l:content>
			<t:Table id="TableBasic" rows="{/Products}" enableBusyIndicator="true" enableCustomFilter="true">
				<t:columns>
					<t:Column>
						<t:label>
							<Text text="Produkt"/>
						</t:label>
						<t:template>
							<Text text="{Name}"/>
						</t:template>
					</t:Column>
					<t:Column>
						<t:label>
							<Text text="Preis"/>
						</t:label>
						<t:template>
							<Text text="{Price} â‚¬"/>
						</t:template>
					</t:Column>
					<t:Column>
						<t:label>
							<Text text="Bewertung"/>
						</t:label>
						<t:template>
							<Text text="{Rating}"/>
						</t:template>
					</t:Column>
				</t:columns>
			</t:Table>
		</l:content>
	</l:VerticalLayout>
</c:FragmentDefinition>